#
# wm independent hotkeys

##---------- Rofi Launcher & Menus ----------##

# Rofi Network Menu
super + space 
	sh ~/.config/rofi/launcher/launcher

# Rofi Menus/Applets
super + x
	sh ~/.config/rofi/powermenu/powermenu

alt + l 
  betterlockscreen -l dimblur

#mpd player
super + b 
	sh ~/.config/rofi/mpd/mpd

#windows
alt + v
	sh ~/.config/rofi/window/windows

	
##---------- Applications ----------##

# Launch Apps
super + a
	mpv --player-operation-mode=pseudo-gui

super + shift + Return
	thunar 

shift + alt + w
  feh --bg-fill --randomize ~/Pictures/Wallpaper/*

# Terminal Apps
ctrl + alt + h
	killall btop; bspterm --class-float-fixed btop

ctrl + alt + v
  sh ~/.local/bin/neovide-launcher

# Lockscreen
super + ctrl + x 
    systemctl suspend  

##---------- System Keys ----------##

# Take a screenshot
Print
	 flameshot gui
	
# Take screenshot in 5 second
alt + Print	
	flameshot full -c -p ~/Pictures/Screenshots/

# Take screenshot in 10 second
shift + Print	
	flameshot gui -d 2000

# bspwm hotkeys                    ##---------- Bspwm ----------##
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}
	
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
	
# make sxhkd reload its configuration files:
shift + Escape	
	xkill

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window
	

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,c,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + grave
	bspc node -f last
alt + Tab
	bspc desktop -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
	
# Hide/Unhide Window
super + i
	bspwinmask		

super + Return
  bspterm --class-float

# Terminal 
alt + Return
	kitty

# kill window
ctrl + alt + x
    xkill

# Quicklink
alt + c
	~/.config/rofi/bin/rofi-quicklink

# switch between output devices
super + shift + m
  sh ~/.local/bin/audio_switch volume-mute

alt + {equal,minus}
  {sh ~/.local/bin/audio_switch volume-increase,sh ~/.local/bin/audio_switch volume-decrease}

alt + shift + {equal,minus}
  {sh ~/.local/bin/audio_switch brightness-up,sh ~/.local/bin/audio_switch brightness-down}

#Function and XF86 Keys
XF86Tools
  sh ~/.config/rofi/powermenu/powermenu

XF86Mail
  bspterm --class-float

XF86WWW
  sh ~/.config/rofi/bin/rofi-quicklink

XF86Search
  bspc node -c

XF86HomePage
  thunar

# Brighness control
XF86MonBrightness{Up,Down}
  {sh ~/.local/bin/switch-output/brightness-up,sh ~/.local/bin/switch-output/brightness-down}
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume}
  {sh ~/.local/bin/switch-output/increase-volume,sh ~/.local/bin/switch-output/decrease-volume}

XF86AudioMute
  sh ~/.local/bin/switch-output/volume-mute

XF86AudioMicMute
  amixer sset Capture nocap
	
# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

#Tekapoint screen drawing tool
ctrl + grave
  sh ~/.local/bin/run_tekapoint

#Function keys

#Music F9 F10 F11 F12
{F12,F11,F10}
	mpc {next,toggle,prev}
F9
	killall ncmpcpp; bspterm --class-float-fixed ncmpcpp
#App Own function F1 F2 F3 
F4
  sh ~/.config/rofi/bin/yt-downloader

#Auto-run Scripts
F5
  sh ~/.config/rofi/bin/auto_google_search
F6
 sh  ~/.config/rofi/bin/auto_youtube_search
F7
 sh ~/.config/rofi/bin/auto_movie_search
F8
  brave "file:///mnt/Files/0Linux/Music/Metronome/index.html"
super + F8
  ~/.local/bin/run_ardour

#Pause for timer
Pause
  sh ~/.local/bin/countdown
